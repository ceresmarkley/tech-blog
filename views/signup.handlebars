<div class="container bg-dark">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card bg-dark text-light" style="w-75">
                <div class="card-header">
                    <h3 class="text-center">Sign up</h3>
                </div>
                <div class="card-body">
                    <form id="signup-form">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" id="username"
                                placeholder="Create your username here">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="Use a unique email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" id="password"
                                placeholder="Longer than 4 and shorter than 18">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn border-info btn-dark text-info" id="signup">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="/js/signup.js"></script>
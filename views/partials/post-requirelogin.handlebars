<div class="card mx-auto w-100">
    <div class="card-body">
        <h3 class="card-title">
            <a href="/login" class="text-decoration-none text-light">{{title}}</a>
        </h3>
        <p class="card-body fs-5 text-light">{{text}}</p>
        <p class="card-text text-end fs-6 text-light">
            <span id="span_username">{{user.name}}</span> created on {{format_date created_at}} !
        </p>

    </div>
</div>